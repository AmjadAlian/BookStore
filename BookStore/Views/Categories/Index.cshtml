 @model List<Category>
 @section MainTitle{Categories}
 @section Title{Main}
 @section SubTitle{Main}
@section CardTitle{Library}
 @section Buttons{

    <a asp-controller="Categories" asp-action="Create" class="btn btn-outline-primary">Create</a>
 }
<!DOCTYPE html>
    <html>
    <head>
        <title></title>
    </head>
    <body>
       

    @if (!Model.Any())
    {
        <div class="card-body">
        <tr>
            <td colspan="2">
                <div class="alert alert-info alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fas fa-info"></i> Alert!</h5>
                    No Data Found.
                </div>
            </td>
        </tr>
        </div>
    }
    else
    {
        <div class="card-body">

        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Name</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>


                @foreach (var item in @Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                                <a class="btn btn-outline-secondary" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">
                                Edit
                            </a>
                                <a class="btn btn-outline-danger" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id">
                                   Delete
                                </a>
                        </td>
                    </tr>
                }
            

          
          </tbody>
     </table>
        </div>
    }
    </body>
    </html>